# Configurações do Banco de Dados MySQL
# Copie este arquivo para .env e configure suas credenciais

# Senha do usuário root do MySQL
MYSQL_ROOT_PASSWORD=sua_senha_root_forte_aqui

# Usuário da aplicação
MYSQL_USER=seu_usuario_app

# Senha do usuário da aplicação
MYSQL_PASSWORD=sua_senha_usuario_forte_aqui

# String de conexão completa
DB_CONNECTION_STRING=Server=localhost;Port=3306;Database=LojaDeBrinquedos;User Id=seu_usuario_app;Password=sua_senha_usuario_forte_aqui;

# Configurações da API
API_PORT=5000
API_HOST=localhost

# Ambiente
ASPNETCORE_ENVIRONMENT=Development

# Configurações de Log
LOG_LEVEL=Information

# Configurações de Segurança
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_ISSUER=LojaDeBrinquedos.API
JWT_AUDIENCE=LojaDeBrinquedos.Client

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_email

# Configurações de Redis (opcional)
REDIS_CONNECTION=localhost:6379
REDIS_PASSWORD=sua_senha_redis
